<%= bootstrap_form_with model: device_model, local: true, layout: :horizontal do |form| %>
  <%= form.collection_select :device_type_id, @device_types_for_select, :id, :name, prompt: true, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.collection_select :device_manufacturer_id, @device_manufacturers_for_select, :id, :name, prompt: true, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.text_field :name, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.check_box :is_active, add_control_col_class: 'mb-2' %>
  <%= form.submit %>
<% end %>