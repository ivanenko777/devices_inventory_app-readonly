<% content_for :page_menu do %>
  <li class="nav-item"><%= active_link_to 'New', new_device_model_path, class: 'nav-link link-success' %></li>
  <li class="nav-item"><%= active_link_to 'List', device_models_path, class: 'nav-link', active: :exclusive %></li>
  <% if @device_model && params[:id] %>
    <li class="nav-item"><%= active_link_to 'Info', @device_model, class: 'nav-link', active: :exclusive %></li>
    <li class="nav-item"><%= active_link_to 'Edit', edit_device_model_path(@device_model), class: 'nav-link' %></li>
    <li class="nav-item"><%= link_to 'Delete', @device_model, method: :delete, data: { confirm: 'Are you sure?' }, class: 'nav-link' %></li>
  <% end %>
<% end %>