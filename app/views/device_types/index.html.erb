<% content_for :page_head do %>
  <h1 class="h2">Device types</h1>
<% end %>

<%= render 'menu' %>

<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>Sys name</th>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @device_types.each do |device_type| %>
    <tr>
      <td><%= device_type.sys_name %></td>
      <td><%= device_type.name %></td>
      <td><%= link_to 'Info', device_type %></td>
    </tr>
  <% end %>
  </tbody>
</table>