<% content_for :page_menu do %>
  <li class="nav-item"><%= active_link_to 'New', new_user_path, class: 'nav-link link-success' %></li>
  <li class="nav-item"><%= active_link_to 'List', users_path, class: 'nav-link', active: :exclusive %></li>
  <% if @user && params[:id] %>
    <li class="nav-item"><%= active_link_to 'Info', @user, class: 'nav-link', active: :exclusive %></li>
    <li class="nav-item"><%= active_link_to 'Edit', edit_user_path(@user), class: 'nav-link' %></li>
    <li class="nav-item"><%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'nav-link' %></li>
  <% end %>
<% end %>