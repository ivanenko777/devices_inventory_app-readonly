<% content_for :page_head do %>
  <h1 class="h2">User #<%= @user.id %></h1>
<% end %>

<%= render 'menu' %>

<p>
  <strong>Full name:</strong>
  <%= @user.full_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Is active:</strong>
  <%= @user.is_active %>
</p>

<p>
  <strong>Logged in at:</strong>
  <%= @user.logged_in_at %>
</p>