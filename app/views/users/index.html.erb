<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= link_to 'New User', new_user_path %>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Email</th>
      <th>Is active</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.is_active %></td>
      <td><%= link_to 'Info', user %></td>
    </tr>
  <% end %>
  </tbody>
</table>