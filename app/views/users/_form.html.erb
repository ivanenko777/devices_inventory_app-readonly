<%= bootstrap_form_with model: user, local: true, layout: :horizontal do |form| %>
  <%= form.text_field :full_name, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.text_field :email, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.check_box :is_active, add_control_col_class: 'mb-2' %>
  <%= form.password_field :password, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.password_field :password_confirmation, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.submit %>
<% end %>