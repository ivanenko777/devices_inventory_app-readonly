<% content_for :page_head do %>
  <h1 class="h2">Office #<%= @office.id %> rooms</h1>
<% end %>

<%= render 'menu' %>

<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>Name</th>
    <th>Is active</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.name %></td>
      <td><%= room.is_active %></td>
      <td><%= link_to 'Info', room %></td>
    </tr>
  <% end %>
  </tbody>
</table>