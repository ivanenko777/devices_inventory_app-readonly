<%= bootstrap_form_with model: office, local: true, layout: :horizontal do |form| %>
  <%= form.text_field :name, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.text_field :address, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.check_box :is_active, class: 'mb-2' %>
  <%= form.submit %>
<% end %>