<% content_for :page_head do %>
  <h1 class="h2">Device #<%= @device.id %> history</h1>
<% end %>

<%= render 'menu' %>

<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>Status</th>
    <th>Room</th>
    <th>Address</th>
    <th>Office</th>
    <th>Created by</th>
    <th>Created at</th>
  </tr>
  </thead>
  <tbody>
  <% @device_history.each do |history| %>
    <tr <%= 'class="table-primary"'.html_safe if history == @device_history.first %>>
      <td><%= Device.statuses.key(history.status_id).to_s.humanize %></td>
      <td><%= history.room.name %></td>
      <td><%= history.room.office.address %></td>
      <td><%= history.room.office.name %></td>
      <td><%= history.created_by.full_name %></td>
      <td><%= history.created_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>