<%= bootstrap_form_with model: device, local: true, layout: :horizontal do |form| %>
  <%= form.collection_radio_buttons :status, Device.statuses, :first, :first, class: 'mb-2' %>
  <%= form.collection_select :device_model_id, @device_models_for_select, :id, :device_model_info_for_select, prompt: true, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.collection_select :room_id, @rooms_for_select, :id, :room_info_for_select, prompt: true, class: 'mb-2', add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.text_field :serial_no, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.text_field :asset_no, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.submit %>
  <%= form.submit('Create and New') if device.new_record? %>
<% end %>