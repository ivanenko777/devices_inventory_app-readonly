<p id="notice"><%= notice %></p>

<h1>Rooms</h1>
<%= link_to 'New Room', new_room_path %>

<table>
  <thead>
  <tr>
    <th>Office name</th>
    <th>Office address</th>
    <th>Room name</th>
    <th>Is active room</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.office.name %></td>
      <td><%= room.office.address %></td>
      <td><%= room.name %></td>
      <td><%= room.is_active %></td>
      <td><%= link_to 'Info', room %></td>
    </tr>
  <% end %>
  </tbody>
</table>