<%= bootstrap_form_with model: room, local: true, layout: :horizontal do |form| %>
  <%= form.collection_select :office_id, @offices_for_select, :id, :office_info_for_select, prompt: true, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.text_field :name, add_control_col_class: 'col-lg-4 mb-2' %>
  <%= form.check_box :is_active, add_control_col_class: 'mb-2' %>
  <%= form.submit %>
  <%= form.submit('Create and New') if room.new_record? %>
<% end %>