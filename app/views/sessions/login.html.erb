<% content_for :page_head do %>
  <h1 class="h2">Login</h1>
<% end %>

<div class="alert alert-info">Login with email: demo@demo.lt and password demo</div>

<%= form_tag login_path do |form| %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>